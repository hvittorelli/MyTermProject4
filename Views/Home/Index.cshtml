@{
    ViewData["Title"] = "Books for Days";
}

<div class="p-5 mb-2 shadow" style="background-color:lightpink; border-radius:30px;">
    <h1>Books for Days <i class="fa fa-book" style="font-size:36px"></i></h1>
    <p>
        Our "Books for Days" app allows users to catalog the books you've read, discover new books to read next and connect with our community of book lovers.
    </p>
</div>

<div class="row">
    <div class="col-md-6">
        <h3>Let's Start Reading</h3>
        <p>Start by creating your account. Coming soon...</p>
    </div>
    <div class="col-md-6">
        <h3>Find Your Next Book</h3>
        <p>Search our catolog to find your next adventure!</p>
    </div>
</div>
<div class="row">
    <img src="~/Images/bookheart.jpg" alt="book heart" class="float-md-start col-md-6 shadow rounded-md" />
    <img src="~/Images/bookstack.jpg" alt="book stack" class="float-md-start col-md-6 shadow rounded-md" />
</div>
